{
	"name": "yellowbrickring",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "npm run api",
		"api": "NODE_ENV=development wrangler dev --ip=0.0.0.0 --local-protocol=http --port=3000 --persist-to=./r1.data",
		"start": "npm run dev",
		"test": "vitest",
		"migrate": "NODE_ENV=development wrangler d1 execute yellowbrickring_db --file=./migrations/migration_0.sql --local --persist-to=./r1.data",
		"migrate-server": "wrangler d1 execute yellowbrickring_db --file=./migrations/migration_0.sql --remote"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"vitest": "~3.2.0",
		"wrangler": "^4.23.0"
	},
	"dependencies": {
		"hono": "^4.8.4"
	}
}
